<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="edu.connexion3b.controllers.AbonnementController"
            prefHeight="600.0" prefWidth="800.0"
            styleClass="main-container" stylesheets="@styles/abonnement.css">
    <top>
        <VBox alignment="CENTER" spacing="10">
            <padding>
                <Insets top="20" bottom="20" />
            </padding>
            <Label text="Gestion des Abonnements" styleClass="title-label">
                <font>
                    <Font name="System Bold" size="24.0" />
                </font>
            </Label>
        </VBox>
    </top>
    
    <center>
        <VBox spacing="20" styleClass="content-container">
            <padding>
                <Insets top="10" right="20" bottom="10" left="20" />
            </padding>
            
            <GridPane hgap="10" vgap="15">
                <columnConstraints>
                    <ColumnConstraints hgrow="SOMETIMES" minWidth="100" prefWidth="150" />
                    <ColumnConstraints hgrow="SOMETIMES" minWidth="200" prefWidth="300" />
                </columnConstraints>
                
                <Label text="Nom:" styleClass="form-label" GridPane.rowIndex="0" GridPane.columnIndex="0" />
                <TextField fx:id="nomField" styleClass="form-field" GridPane.rowIndex="0" GridPane.columnIndex="1" />
                
                <Label text="Type:" styleClass="form-label" GridPane.rowIndex="1" GridPane.columnIndex="0" />
                <ComboBox fx:id="typeCombo" styleClass="form-field" GridPane.rowIndex="1" GridPane.columnIndex="1" />
                
                <Label text="Durée (jours):" styleClass="form-label" GridPane.rowIndex="2" GridPane.columnIndex="0" />
                <TextField fx:id="dureeField" styleClass="form-field" GridPane.rowIndex="2" GridPane.columnIndex="1" />
                
                <Label text="Prix:" styleClass="form-label" GridPane.rowIndex="3" GridPane.columnIndex="0" />
                <TextField fx:id="prixField" styleClass="form-field" GridPane.rowIndex="3" GridPane.columnIndex="1" />
                
                <Label text="Statut:" styleClass="form-label" GridPane.rowIndex="4" GridPane.columnIndex="0" />
                <HBox spacing="15" GridPane.rowIndex="4" GridPane.columnIndex="1">
                    <RadioButton fx:id="etudiantRadio" text="Étudiant" styleClass="status-radio" />
                    <RadioButton fx:id="nonEtudiantRadio" text="Non-étudiant" styleClass="status-radio" selected="true" />
                </HBox>
                
                <HBox alignment="CENTER" spacing="15" GridPane.rowIndex="5" GridPane.columnIndex="1">
                    <Button fx:id="ajouterBtn" text="Ajouter" styleClass="add-button" />
                    <Button fx:id="modifierBtn" text="Modifier" styleClass="edit-button" />
                    <Button fx:id="supprimerBtn" text="Supprimer" styleClass="delete-button" />
                    <Button fx:id="clearBtn" text="Effacer" styleClass="clear-button" />
                    <Button fx:id="payerBtn" text="Payer" styleClass="pay-button" />
                </HBox>
            </GridPane>
            
            <TableView fx:id="abonnementTable" VBox.vgrow="ALWAYS" styleClass="data-table">
                <columns>
                    <TableColumn fx:id="idCol" text="ID" prefWidth="50" />
                    <TableColumn fx:id="nomCol" text="Nom" prefWidth="200" />
                    <TableColumn fx:id="typeCol" text="Type" prefWidth="150" />
                    <TableColumn fx:id="dureeCol" text="Durée (jours)" prefWidth="150" />
                    <TableColumn fx:id="prixCol" text="Prix" prefWidth="100" />
                </columns>
            </TableView>
        </VBox>
    </center>
</BorderPane>