<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
            fx:controller="tn.esprit.controller.CoursController">
    <VBox spacing="15" style="-fx-padding: 20; -fx-background-color: #ecf0f1;">
        <TextField fx:id="descriptionField" promptText="Description" style="-fx-background-color: white; -fx-border-color: #bdc3c7;"/>
        <TextField fx:id="trainerIdField" promptText="Trainer ID" style="-fx-background-color: white; -fx-border-color: #bdc3c7;"/>
        <TextField fx:id="maxParticipantsField" promptText="Max Participants" style="-fx-background-color: white; -fx-border-color: #bdc3c7;"/>
        <TextField fx:id="durationField" promptText="Duration Minutes" style="-fx-background-color: white; -fx-border-color: #bdc3c7;"/>
        <Button text="Add Cours" onAction="#handleAddCours" style="-fx-background-color: #2ecc71; -fx-text-fill: white;"/>
        <TableView fx:id="coursTable" style="-fx-background-color: white; -fx-border-color: #bdc3c7;">
            <columns>
                <TableColumn text="ID" />
                <TableColumn text="Description" />
                <TableColumn text="Trainer ID" />
                <TableColumn text="Max Participants" />
                <TableColumn text="Duration (Minutes)" />
            </columns>
        </TableView>
    </VBox>
</AnchorPane>
