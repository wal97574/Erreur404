<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tn.esprit.controller.MainController">
    <!-- Top: Header with navigation -->
    <top>
        <HBox style="-fx-background-color: #2c3e50; -fx-padding: 15;">
            <Label text="Gym Management System" style="-fx-text-fill: white; -fx-font-size: 20; -fx-font-weight: bold;"/>
            <HBox spacing="20" style="-fx-padding: 0 0 0 50;">
                <Button text="Dashboard" fx:id="dashboardBtn" onAction="#handleDashboardNavigation" style="-fx-background-color: transparent; -fx-text-fill: white;"/>
                <Button text="Courses" fx:id="coursesBtn" onAction="#handleCoursesNavigation" style="-fx-background-color: transparent; -fx-text-fill: white;"/>
                <Button text="Schedule" fx:id="scheduleBtn" onAction="#handleScheduleNavigation" style="-fx-background-color: transparent; -fx-text-fill: white;"/>
                <Button text="Members" fx:id="membersBtn" style="-fx-background-color: transparent; -fx-text-fill: white;"/>
            </HBox>
            <HBox HBox.hgrow="ALWAYS"/>
            <Button text="Logout" fx:id="logoutBtn" style="-fx-background-color: #e74c3c; -fx-text-fill: white;"/>
        </HBox>
    </top>

    <!-- Center: Dynamic content area -->
    <center>
        <StackPane fx:id="contentPane">
            <!-- Initial welcome content -->
            <VBox alignment="CENTER" spacing="20">
                <Text text="Welcome to Gym Management System" style="-fx-font-size: 24; -fx-fill: #2c3e50;"/>
                <Text text="Please select an option from the menu above" style="-fx-font-size: 16; -fx-fill: #7f8c8d;"/>
                <ImageView>
                    <Image url="@../images/gym-icon.png"/>
                </ImageView>
            </VBox>
        </StackPane>
    </center>

    <!-- Bottom: Status bar -->
    <bottom>
        <HBox style="-fx-background-color: #ecf0f1; -fx-padding: 5;">
            <Label fx:id="statusLabel" text="Ready" style="-fx-text-fill: #2c3e50;"/>
            <HBox HBox.hgrow="ALWAYS"/>
            <Label text="Â© 2023 Gym Management System" style="-fx-text-fill: #7f8c8d;"/>
        </HBox>
    </bottom>

    <!-- Left: User profile/sidebar -->
    <left>
        <VBox style="-fx-background-color: #34495e; -fx-pref-width: 200; -fx-spacing: 15; -fx-padding: 20;">
            <VBox alignment="CENTER" spacing="10">
                <ImageView fitWidth="80" fitHeight="80" preserveRatio="true">
                    <Image url="@../images/user-avatar.png"/>
                </ImageView>
                <Label fx:id="userNameLabel" text="John Doe" style="-fx-text-fill: white; -fx-font-weight: bold;"/>
                <Label fx:id="userRoleLabel" text="Trainer" style="-fx-text-fill: #bdc3c7;"/>
            </VBox>

            <Separator style="-fx-background-color: #7f8c8d;"/>

            <Label text="QUICK ACTIONS" style="-fx-text-fill: #bdc3c7; -fx-padding: 5 0 5 0;"/>
            <Button text="Add New Course" fx:id="quickAddCourseBtn" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-alignment: baseline-left;"/>
            <Button text="View My Schedule" fx:id="quickViewScheduleBtn" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-alignment: baseline-left;"/>
        </VBox>
    </left>
</BorderPane>
