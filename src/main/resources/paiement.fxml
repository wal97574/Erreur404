<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.web.WebView?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="edu.connexion3b.controllers.PaiementController"
            prefHeight="600.0" prefWidth="800.0"
            styleClass="main-container" stylesheets="@styles/abonnement.css">
    <top>
        <BorderPane>
            <left>
                <Button fx:id="retourButton" text="← Retour" styleClass="back-button">
                    <BorderPane.margin>
                        <Insets left="20" top="20" />
                    </BorderPane.margin>
                </Button>
            </left>
            <center>
                <VBox alignment="CENTER" spacing="10">
                    <padding>
                        <Insets top="20" bottom="20" />
                    </padding>
                    <Label text="Paiement de l'abonnement" styleClass="title-label">
                        <font>
                            <Font name="System Bold" size="24.0" />
                        </font>
                    </Label>
                </VBox>
            </center>
        </BorderPane>
    </top>
    
    <center>
        <VBox spacing="20" styleClass="content-container">
            <padding>
                <Insets top="10" right="20" bottom="10" left="20" />
            </padding>
            
            <GridPane hgap="10" vgap="15">
                <columnConstraints>
                    <ColumnConstraints hgrow="SOMETIMES" minWidth="100" prefWidth="150" />
                    <ColumnConstraints hgrow="SOMETIMES" minWidth="200" prefWidth="300" />
                </columnConstraints>
                
                <Label text="Abonnement:" styleClass="form-label" GridPane.rowIndex="0" GridPane.columnIndex="0" />
                <Label fx:id="nomAbonnementLabel" styleClass="form-field" GridPane.rowIndex="0" GridPane.columnIndex="1" />
                
                <Label text="Type:" styleClass="form-label" GridPane.rowIndex="1" GridPane.columnIndex="0" />
                <Label fx:id="typeAbonnementLabel" styleClass="form-field" GridPane.rowIndex="1" GridPane.columnIndex="1" />
                
                <Label text="Durée:" styleClass="form-label" GridPane.rowIndex="2" GridPane.columnIndex="0" />
                <Label fx:id="dureeAbonnementLabel" styleClass="form-field" GridPane.rowIndex="2" GridPane.columnIndex="1" />
                
                <Label text="Prix:" styleClass="form-label" GridPane.rowIndex="3" GridPane.columnIndex="0" />
                <Label fx:id="prixAbonnementLabel" styleClass="form-field" GridPane.rowIndex="3" GridPane.columnIndex="1" />
                
                <Label text="Email:" styleClass="form-label" GridPane.rowIndex="4" GridPane.columnIndex="0" />
                <TextField fx:id="emailField" styleClass="form-field" GridPane.rowIndex="4" GridPane.columnIndex="1" />
                
                <HBox alignment="CENTER" spacing="15" GridPane.rowIndex="5" GridPane.columnIndex="1">
                    <Button fx:id="payerButton" text="Procéder au paiement" styleClass="add-button" />
                    <Button fx:id="annulerButton" text="Annuler" styleClass="delete-button" />
                </HBox>
            </GridPane>
            
            <WebView fx:id="webView" VBox.vgrow="ALWAYS" />
        </VBox>
    </center>
</BorderPane>
