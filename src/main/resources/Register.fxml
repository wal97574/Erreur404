<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.*?>

<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.esprit.controllers.RegisterController" style="-fx-background-color: #f5f7fa;">
   <!-- Top Navigation Bar -->
   <top>
      <HBox style="-fx-background-color: linear-gradient(to right, #3498db, #2c3e50); -fx-padding: 15; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.2), 10, 0, 0, 0);">
         <Label text="SMART GYM" style="-fx-text-fill: white; -fx-font-size: 22; -fx-font-weight: bold; -fx-font-family: 'Arial Rounded MT Bold';"/>
         <Region HBox.hgrow="ALWAYS"/>
      </HBox>
   </top>

   <!-- Center Content -->
   <center>
      <StackPane>
         <VBox alignment="CENTER" spacing="20" style="-fx-padding: 40;">
            <Text text="Créer un compte" style="-fx-font-size: 36; -fx-font-weight: bold; -fx-fill: linear-gradient(to right, #3498db, #2c3e50); -fx-font-family: 'Arial Rounded MT Bold';"/>
            <Text text="Veuillez remplir les informations ci-dessous" style="-fx-font-size: 16; -fx-fill: #7f8c8d; -fx-font-style: italic;"/>

            <VBox alignment="CENTER" spacing="15" style="-fx-padding: 20;">
               <TextField fx:id="tfNom" promptText="Nom" style="-fx-background-color: white; -fx-border-color: #bdc3c7; -fx-border-radius: 8; -fx-padding: 10; -fx-font-size: 14;" prefWidth="300"/>
               <TextField fx:id="tfPrenom" promptText="Prénom" style="-fx-background-color: white; -fx-border-color: #bdc3c7; -fx-border-radius: 8; -fx-padding: 10; -fx-font-size: 14;" prefWidth="300"/>
               <TextField fx:id="tfEmail" promptText="Email" style="-fx-background-color: white; -fx-border-color: #bdc3c7; -fx-border-radius: 8; -fx-padding: 10; -fx-font-size: 14;" prefWidth="300"/>
               <PasswordField fx:id="tfPassword" promptText="Mot de passe" style="-fx-background-color: white; -fx-border-color: #bdc3c7; -fx-border-radius: 8; -fx-padding: 10; -fx-font-size: 14;" prefWidth="300"/>
               <TextField fx:id="tfTelephone" promptText="Téléphone" style="-fx-background-color: white; -fx-border-color: #bdc3c7; -fx-border-radius: 8; -fx-padding: 10; -fx-font-size: 14;" prefWidth="300"/>
               <ComboBox fx:id="cbSexe" promptText="Sexe" style="-fx-background-color: white; -fx-border-color: #bdc3c7; -fx-border-radius: 8; -fx-padding: 10; -fx-font-size: 14;" prefWidth="300"/>
               <ComboBox fx:id="cbRole" promptText="Rôle" style="-fx-background-color: white; -fx-border-color: #bdc3c7; -fx-border-radius: 8; -fx-padding: 10; -fx-font-size: 14;" prefWidth="300"/>
               <Button fx:id="btnRegister" text="S'inscrire" onAction="#handleRegister" style="-fx-background-color: #3498db, linear-gradient(#3498db, #2980b9); -fx-text-fill: white; -fx-font-size: 16; -fx-font-weight: bold; -fx-background-radius: 8; -fx-pref-width: 300; -fx-pref-height: 40; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.2), 5, 0, 0, 2);"/>
            </VBox>

            <Hyperlink fx:id="linkLogin" onAction="#handleLoginLink" text="Vous avez déjà un compte ? Connectez-vous ici" style="-fx-text-fill: #3498db; -fx-font-size: 12;"/>
         </VBox>
      </StackPane>
   </center>

   <!-- Bottom Status Bar -->
   <bottom>
      <HBox style="-fx-background-color: linear-gradient(to right, #2c3e50, #3498db); -fx-padding: 12;" alignment="CENTER">
         <Label text="© 2025 Système de Gestion de Gymnase | Solutions Fitness Premium" style="-fx-text-fill: white; -fx-font-size: 12; -fx-font-style: italic;"/>
      </HBox>
   </bottom>
</BorderPane>
